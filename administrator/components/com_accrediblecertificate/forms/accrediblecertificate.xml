<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="details" addfieldprefix="Joomla\Component\Accrediblecertificate\Administrator\Field">
		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			class="readonly"
			readonly="true"
		/>
		<field
			name="user_id"
			type="user"
			label="COM_ACCREDIBLECERTIFICATE_LABEL_USER"
			validate="UserId"
		/>
		<field
			name="group_id"
			type="text"
			label="COM_ACCREDIBLECERTIFICATE_LABEL_GROUP_ID"
		/>
		<field
			name="url_badge"
			type="text"
			label="COM_ACCREDIBLECERTIFICATE_LABEL_URL_IMAGE"
			
		/>
		<field
			name="url_image"
			type="text"
			label="COM_ACCREDIBLECERTIFICATE_LABEL_URL_BADGE"

		/>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			default="1"
			class="form-select-color-state"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>

		</field>

		<field
			name="created"
			type="calendar"
			label="COM_ACCREDIBLECERTIFICATE_LABEL_CREATED"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>
		
	</fieldset>

</form>
